{% extends 'base_backend.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">
                        Appointment
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('backend') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Appointment</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-file"></i> Item
                            </h3>
                            <div class="card-tools">
                                <a href="{{ path('appointment_index') }}" class="btn btn-info btn-xs">
                                    <i class="fa fa-arrow-left"></i> back to list
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>
                                            <span class="badge bg-primary">
                                                {{ appointment.id }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Code</th>
                                        <td>{{ appointment.code }}</td>
                                    </tr>
                                    <tr>
                                        <th>Staff Member</th>
                                        <td>{{ appointment.staffMember.getFullName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Service</th>
                                        <td>{{ appointment.xService.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <td>{{ appointment.xDate|date("M j, Y") }}</td>
                                    </tr>
                                    <tr>
                                        <th>Period</th>
                                        <td>{{ appointment.periodStart ~ " - " ~ appointment.periodEnd }}</td>
                                    </tr>
                                    <tr>
                                        <th>Customers</th>
                                        <td>
                                            <ul>
                                                {% for customer in appointment.customers  %}
                                                    <li>{{ customer.getFullName|e }}</li>
                                                {% endfor %}
                                            </ul>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Note</th>
                                        <td>{{ appointment.note }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            {{ include('appointment/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            <a href="{{ path('appointment_edit', {'id': appointment.id}) }}" class="btn btn-warning btn-sm pull-right">
                                <i class="fa fa-pencil"></i> edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}