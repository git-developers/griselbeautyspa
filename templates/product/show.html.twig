{% extends 'base_backend.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">
                        Product
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('backend') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Product</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-file"></i> Item
                            </h3>
                            <div class="card-tools">
                                <a href="{{ path('product_index') }}" class="btn btn-info btn-xs">
                                    <i class="fa fa-arrow-left"></i> back to list
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>
                                        <span class="badge bg-primary">
                                            {{ product.id }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Code</th>
                                    <td>{{ product.code }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ product.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ product.description }}</td>
                                </tr>
                                <tr>
                                    <th>Price</th>
                                    <td>{{ product.price }}</td>
                                </tr>
                                <tr>
                                    <th>Active</th>
                                    <td>
                                        {% if product.isActive  %}
                                            <small class="badge badge-success">yes</small>
                                        {% else %}
                                            <small class="badge badge-danger">no</small>
                                        {% endif %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            {{ include('product/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm pull-right">
                                <i class="fa fa-pencil"></i> edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}